<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/voucherLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/e_voucher"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/imageVoucher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/e_voucher"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textviewMYR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="MYR"
                android:textColor="@color/white"
                android:textSize="40sp" />


            <TextView
                android:id="@+id/txtViewNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="bottom"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/voucher_border_design"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/voucher_border_design"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="E-Voucher Code"
                        android:textColor="@color/black">

                    </TextView>


                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Code"
                        android:textColor="@color/black">

                    </TextView>
                </LinearLayout>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="HCNY2021"
                    android:textColor="@color/black">

                </TextView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>