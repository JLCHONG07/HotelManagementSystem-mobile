<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#00A6FF"
        android:layout_height="200dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:showDividers="middle"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_user_image"
            android:layout_width="@dimen/my_profile_user_image_size"
            android:layout_height="@dimen/my_profile_user_image_size"
            android:contentDescription="@string/content_description"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_user_place_holder" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/my_profile_screen_content_padding"
            android:showDividers="middle">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:layout_editor_absoluteY="115dp" />

            <TextView
                android:id="@+id/textViewUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:layout_editor_absoluteY="115dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                tools:layout_editor_absoluteY="115dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ic_num"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:layout_editor_absoluteY="115dp" />

            <TextView
                android:id="@+id/textViewID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:layout_editor_absoluteY="115dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                tools:layout_editor_absoluteY="115dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:layout_editor_absoluteY="115dp" />

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:layout_editor_absoluteY="115dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/EditProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/account_line_border"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view">
        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="10dp"
            android:src="@drawable/edit" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"

            android:background="@drawable/border"
            android:gravity="top|center_vertical"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/editProfile"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:baselineAlignBottom="false"
            android:src="@drawable/go" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/book"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/account_line_border"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditProfile">
        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="8dp"
            android:src="@drawable/icon_facilities_booking" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="top|center_vertical"

            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/booking_history"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:baselineAlignBottom="false"
            android:src="@drawable/go" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/check_out_history"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/account_line_border"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book">
        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="8dp"
            android:src="@drawable/checkin" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="top|center_vertical"

            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="@string/checkout_history"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:baselineAlignBottom="false"
            android:src="@drawable/go" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ChangePassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_out_history">
        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="8dp"
            android:src="@drawable/changepassword" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="top|center_vertical"

            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/change_password"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:baselineAlignBottom="false"
            android:src="@drawable/go" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="70dp"
        android:background="#00A6FF"
        android:text="@string/logout"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>