<?xml version="1.0" encoding="utf-8"?>
<!--layout for homepage and account-->
<resources>
    <style name="homeTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@drawable/app_background</item>
        <item name="actionBarItemBackground">@color/barBrown</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="loginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/login</item>
    </style>

    <style name="signupTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/register</item>
    </style>

    <style name="NavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/ActiveText</item>
        <item name="itemTextAppearanceInactive">@style/InactiveText</item>
    </style>
    <style name="ActiveText">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="InactiveText">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>