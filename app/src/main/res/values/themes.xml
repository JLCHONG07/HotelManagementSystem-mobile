<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- action bar design-->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- background of application-->
        <item name="android:windowBackground">@drawable/app_background</item>
        <!--toolbar back button color-->
        <item name="actionBarTheme">@style/ToolbarTheme</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/barBrown</item>
        <item name="titleTextStyle">@style/MyActionBarTitle</item>
    </style>

    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/berkshire_swash</item>
        <item name="android:fontFamily">@font/berkshire_swash</item>

    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/black</item>
    </style>


</resources>